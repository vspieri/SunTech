@model IEnumerable<SunTech.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<h1>Compra</h1>

<p>
    <a asp-action="Create" class="btn1">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                <a class="btn5" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn5" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a class="btn5" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
