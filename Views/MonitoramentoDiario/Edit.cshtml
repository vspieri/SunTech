@model SunTech.Models.MonitoramentoDiario

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DataDia" class="control-label"></label>
                <input asp-for="DataDia" class="form-control" />
                <span asp-validation-for="DataDia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MediaDia" class="control-label"></label>
                <input asp-for="MediaDia" class="form-control" />
                <span asp-validation-for="MediaDia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonitoramentoId" class="control-label"></label>
                <select asp-for="MonitoramentoId" class="form-control" asp-items="ViewBag.MonitoramentoId"></select>
                <span asp-validation-for="MonitoramentoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn2" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
