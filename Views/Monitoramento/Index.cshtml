@model IEnumerable<SunTech.Models.Monitoramento>

@{
    ViewData["Title"] = "Index";
}

<h1>Monitoramento</h1>

<p>
    <a asp-action="Create" class="btn1">Cadastrar</a>
</p>
<table class="table">
    <thead>
                <div>
            @using (Html.BeginForm("Index", "Monitoramentos", FormMethod.Get))
            {
                <p>
                    Digite aqui sua pesquisa: @Html.TextBox("pesquisa")
                    <input class="btn btn-primary"type="submit" value="Pesquisar" />
                </p>
            }
</div>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadePlaca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInstalacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataUltimaManutencao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Placa.NomePlaca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantidadePlaca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInstalacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataUltimaManutencao)
            </td>
            <td>
                <a class="btn5" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn5" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a class="btn5" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
