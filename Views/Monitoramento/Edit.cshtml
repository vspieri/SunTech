@model SunTech.Models.Monitoramento

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PlacaId" class="control-label">Placa</label>
                <select asp-for="PlacaId" class="form-control" asp-items="ViewBag.PlacaId"></select>
                <span asp-validation-for="PlacaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadePlaca" class="control-label">Quantidade</label>
                <input asp-for="QuantidadePlaca" class="form-control" />
                <span asp-validation-for="QuantidadePlaca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label">Cliente</label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInstalacao" class="control-label">Instalação</label>
                <input asp-for="DataInstalacao" class="form-control" />
                <span asp-validation-for="DataInstalacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataUltimaManutencao" class="control-label">Última Manutenção</label>
                <input asp-for="DataUltimaManutencao" class="form-control" />
                <span asp-validation-for="DataUltimaManutencao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn2"asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
